{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@rnaga/wp-next-core/*": ["../core/dist/*"],
      "@rnaga/wp-next-admin/*": ["../admin/dist/*"],
      "_wp/*": ["./src/_wp/*"]
    }
  },
  "include": ["src/index.ts"],
  "exclude": ["dist/**/*", "node_modules", "templates/**/*"]
}
